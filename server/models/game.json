{
  "name": "Game",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "week": {
      "type": "number",
      "required": true
    },
    "homeScore": {
      "type": "number",
      "required": true
    },
    "awayScore": {
      "type": "number",
      "required": true
    },
    "overtime": {
      "type": "boolean",
      "default": false
    },
    "playedOn": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "season": {
      "type": "belongsTo",
      "model": "Season"
    },
    "homeTeam": {
      "type": "belongsTo",
      "model": "Team"
    },
    "awayTeam": {
      "type": "belongsTo",
      "model": "Team"
    },
    "winTeam": {
      "type": "belongsTo",
      "model": "Team"
    },
    "loseTeam": {
      "type": "belongsTo",
      "model": "Team"
    },
    "picks": {
      "type": "hasAndBelongsToMany",
      "model": "Pick"
    }
  },
  "acls": [],
  "methods": {}
}
